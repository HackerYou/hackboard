<%= content_tag_for :div, pin, class: 'col span3' do %>
  <%= image_tag pin.image.url(:default) %>
  <p class="description"><%= pin.description %></p>
  <div class="attribution clearfix">
    <%= image_tag pin.user.image_url, class: 'pull-left' %>
    <%= link_to pin.user.name, pin.user %> onto <%= link_to pin.board_name, pin.board %>
  </div>
  <% if i_own?(pin) %>
    <%= link_to 'Edit', edit_pin_path(pin), class: 'edit btn btn-mini' %>
    <%= link_to 'Delete', pin, method: :delete, data: { confirm: 'Are you sure?' }, class: 'delete btn btn-mini' %>
  <% end %>
<% end %>
